<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteMain">

    <EditText
        android:id="@+id/editTxtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/txtViewMainTitle"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxtContent"
        android:layout_width="345dp"
        android:layout_height="560dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:gravity="left"
        android:hint="@string/editTxtContent"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTxtTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>